@model Product
@{
ViewData["Title"] = "Edit";
}

<form asp-action="Edit" asp-controller="Home" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductId">

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="input-group mb-3">
        <input type="file" name="imageFile" id="imageFile" class="form-control" />
    </div>

    <div class="mb-3">
        @if (!string.IsNullOrEmpty(Model?.Image))
        {
        <div class="mb-2">
            <img src="~/Image/@Model.Image" alt="Ürün resmi" style="width:100px;" />
        </div>
        }

        <input type="hidden" asp-for="Image" />
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label">Category</label>

        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select"></select>

        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check">
        <input type="hidden" name="IsActive" value="false" />
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">Is Active</label>
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>